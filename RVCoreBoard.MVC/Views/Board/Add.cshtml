@model RVCoreBoard.MVC.Models.Board
@{
    ViewData["Title"] = "글쓰기";
}

<div class="d-flex justify-content-center align-items-start position-relative">
    <div class="col-lg-9 card">
        <div class="card-body">
            <form id="inputForm" class="form-horizontal" method="post" asp-controller="Board" asp-action="Add">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group col-lg-6">
                    <label>제목</label>
                    <input type="text" class="form-control" style="margin-bottom:30px;" asp-for="Title" placeholder="제목 입력" />
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group col-lg-12">
                    <label>내용</label>
                    <textarea class="form-control" id="summernote" asp-for="Content" placeholder="내용 입력"></textarea>
                    <span class="text-danger" asp-validation-for="Content"></span>
                </div>
                <div class="mt-5 mb-3 text-right col-lg-12">
                    <button type="submit" class="btn btn-primary">저장</button>
                    <a class="btn btn-dark" asp-controller="Board" asp-action="Index">취소</a>
                </div>
            </form>
        </div>
    </div>
</div>