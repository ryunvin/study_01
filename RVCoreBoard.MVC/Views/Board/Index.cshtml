@model RVCoreBoard.MVC.Models.BoardListInfoModel
@{
    ViewData["Title"] = "게시판";
}

<div class="d-flex justify-content-center align-items-start position-relative">
    <div class="col-lg-9 card">
        <div class="card-body">
            <div class="row">
                <!-- Column -->
                <div class="col-12 mb-3">
                    <div class="bg-transparent shadow-none">
                        <div class="p-2 text-right">
                            <a class="btn btn-primary" asp-controller="Board" asp-action="Add">글쓰기</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table id="zero_config" class="table table-striped table-bordered no-wrap">
                    <colgroup>
                        <col style="width:100px;" />
                        <col style="width:auto;" />
                        <col style="width:150px;" />
                        <col style="width:150px;" />
                        <col style="width:150px;" />
                    </colgroup>
                    <thead class="text-center">
                        <tr>
                            <th>번호</th>
                            <th>제목</th>
                            <th>글쓴이</th>
                            <th>등록일시</th>
                            <th>조회수</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var board in Model.Data)
                        {
                            <tr>
                                <td>@board.BNo</td>
                                <td class="text-left">
                                    <a asp-controller="Board" asp-action="Detail" asp-route-BNo="@board.BNo">@board.Title</a>
                                </td>
                                <td>@board.user.Name</td>
                                @if (board.Reg_Date.ToString("yyyy-MM-dd").Equals(DateTime.Today.ToString("yyyy-MM-dd")))
                                {
                                    <td>@board.Reg_Date.ToString("HH:mm")</td>
                                }
                                else
                                {
                                    <td>@board.Reg_Date.ToString("MM-dd")</td>
                                }
                                <td>@board.Cnt_Read</td>
                            </tr>
                        }
                    </tbody>
                </table>

                @* 페이징 구현 *@
                <ul class="pagination float-right mt-3">
                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }
                    <li class="page-item @prevDisabled">
                        <a class="page-link" tabindex="-1" asp-action="Index" asp-controller="Board" asp-route-currentPage="@(Model.CurrentPage - 1)">이전</a>
                    </li>
                    @{
                        var prevPageCount = Model.PageRimitCount / 2;
                        var nextPageCount = Model.PageRimitCount % 2 == 0 ? Model.PageRimitCount / 2 - 1 : Model.PageRimitCount / 2;

                        var minPage = 1;
                        var maxPage = Model.PageRimitCount < Model.Count ? Model.PageRimitCount : Model.Count;

                        if (Model.CurrentPage - prevPageCount > 1)
                        {
                            minPage = Model.CurrentPage + nextPageCount < Model.Count ? Model.CurrentPage - prevPageCount : Model.Count - Model.PageRimitCount + 1;
                            maxPage = Model.CurrentPage + nextPageCount < Model.Count ? Model.CurrentPage + nextPageCount : Model.Count;
                        }

                        for (int i = minPage; i <= maxPage; i++)
                        {
                            var pageActive = i == Model.CurrentPage ? "active" : "";
                            <li class="page-item @pageActive">
                                <a class="page-link" asp-action="Index" asp-controller="Board" asp-route-currentPage="@i">@i</a>
                            </li>
                        }
                    }
                    <li class="page-item @nextDisabled">
                        <a class="page-link" asp-action="Index" asp-controller="Board" asp-route-currentPage="@(Model.CurrentPage + 1)">다음</a>
                    </li>
                </ul>
            </div>
            <div class="row">
                <div class="col-12 mb-3 text-center">
                    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100" asp-controller="Board" asp-action="Index" method="get">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="dropdown mb-4 show">
                                    <a class="btn btn-link dropdown-toggle border" asp-action="Index" asp-controller="Board" asp-route-searchTtype="All" 
                                            id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">전체</a>
                                    <div class="dropdown-menu animated--fade-in" aria-labelledby="dropdownMenuButton" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 38px, 0px);">
                                        <a class="dropdown-item" asp-action="Index" asp-controller="Board" asp-route-searchTtype="All">전체</a>
                                        <a class="dropdown-item" asp-action="Index" asp-controller="Board" asp-route-searchTtype="Writer">글쓴이</a>
                                        <a class="dropdown-item" asp-action="Index" asp-controller="Board" asp-route-searchTtype="Content">내용</a>
                                        <a class="dropdown-item" asp-action="Index" asp-controller="Board" asp-route-searchTtype="Coment">댓글</a>
                                    </div>
                                </div>
                            </div>
                            <input type="text" class="form-control bg-light border-0 small" name="SearchString" placeholder="검색하기" aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append d-inline">
                                <button class="btn btn-primary" type="submit" >
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>