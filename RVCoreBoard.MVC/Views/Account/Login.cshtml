@model RVCoreBoard.MVC.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-start position-relative">
    <div class="col-lg-6 center-block">
        <div class="pb-5">
            <form class="mt-4 form-horizontal" method="post" asp-controller="Account" asp-action="Login">
                <div class="row">
                    <div class="col-lg-12 mb-3">
                        <div class="form-group">
                            <label class="text-dark">아이디</label>
                            <input type="text" class="form-control" asp-for="Id" placeholder="아이디 입력" />
                            <span class="text-danger" asp-validation-for="Id"></span>
                        </div>
                    </div>
                    <div class="col-lg-12 mb-3">
                        <div class="form-group">
                            <label class="text-dark">비밀번호</label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="비밀번호 입력" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="col-lg-12 my-3">
                        <div>@Html.ValidationMessage("UserIDorPWNIncorrect", new { @class = "text-danger" })</div>
                        <input type="text" class="form-control d-none" name="returnUrl" value="@ViewBag.ReturnUrl"/>
                    </div>
                    <div class="col-lg-5 center-block text-center my-3">
                        <button type="submit" class="btn btn-block btn-dark">로그인</button>
                    </div>
                    <div class="col-lg-12 text-center">
                        아이디가 없으신가요 ?  <a class="text-danger" asp-controller="Account" asp-action="Register">회원가입</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>