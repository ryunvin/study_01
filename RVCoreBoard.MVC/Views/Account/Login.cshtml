@model RVCoreBoard.MVC.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<!-- Outer Row -->
<div class="row justify-content-center align-items-start position-relative">
    <div class="col-lg-12">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h4 class="text-gray-900 mb-4">로그인</h4>
                            </div>
                            <form class="mt-4 form-horizontal user" method="post" asp-controller="Account" asp-action="Login">
                                <div class="form-group">
                                    <label class="text-dark">아이디</label>
                                    <input type="text" class="form-control form-control-user" asp-for="Id" placeholder="아이디 입력" />
                                    <span class="text-danger" asp-validation-for="Id"></span>
                                </div>
                                <div class="form-group">
                                    <label class="text-dark">비밀번호</label>
                                    <input type="password" class="form-control form-control-user" asp-for="Password" placeholder="비밀번호 입력" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div>@Html.ValidationMessage("UserIDorPWNIncorrect", new { @class = "text-danger" })</div>
                                <input type="text" class="form-control d-none" name="returnUrl" value="@ViewBag.ReturnUrl" />
                                <button type="submit" class="btn btn-primary btn-user btn-block mt-5">로그인</button>
                            </form>
                            <hr class="my-5">
                            <div class="text-center my-3">
                                계정 관련문의는 오픈채팅방 관리자에게 문의 주세요!
                                @*<a asp-controller="Account" asp-action="ForgotPassword">비밀번호를 잊으셨습니까?</a>*@
                            </div>
                            <div class="text-center">
                                아이디가 없으신가요 ?
                                <a class="text-danger" asp-controller="Account" asp-action="Register">회원가입</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
