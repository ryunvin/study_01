@{
    ViewData["Title"] = "ForgotPasswrod";
}

<!-- Outer Row -->
<div class="d-flex justify-content-center align-items-start position-relative">
    <div class="col-xl-5 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">비밀번호 찾기</h1>
                            </div>
                            <form class="mt-4 form-horizontal user" method="post" asp-controller="Account" asp-action="ForgotPassword">
                                <div class="form-group">
                                    <label class="text-dark">아이디</label>
                                    <input type="text" class="form-control form-control-user" name="id" placeholder="아이디 입력" />
                                </div>
                                <div class="form-group">
                                    <label class="text-dark">이름</label>
                                    <input type="text" class="form-control form-control-user" name="name" placeholder="이름" />
                                </div>
                                <div>
                                    @Html.ValidationMessage("UserIDorNameIncorrect", new { @class = "text-danger" })
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block mt-5">비밀번호 찾기</button>
                            </form>
                            <hr class="my-5">
                            <div class="text-center my-3">
                                <a asp-controller="Account" asp-action="Login">로그인 하시겠습니까?</a>
                            </div>
                            <div class="text-center">
                                아이디가 없으신가요 ?
                                <a class="text-danger" asp-controller="Account" asp-action="Register">회원가입</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
